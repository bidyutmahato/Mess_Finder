<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_home"
            app:civ_border_color="#000"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:id="@+id/linearlayout_recyclerView"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/messName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img1"
                android:text="Mess Name"
                android:textColor="#000"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/messName"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img1"
                android:text="Mess Type"
                android:textColor="#000"
                android:textSize="15dp" />


        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Location"
            android:textColor="#000"
            android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@+id/linearlayout_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/amount"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:text="amount"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="more "
                android:textSize="14dp"
                android:textColor="#0869BF" />

        </LinearLayout>




        <TextView
            android:visibility="gone"
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="about "
            android:textSize="14dp"
            android:textColor="#0869BF" />

        <TextView
            android:visibility="gone"
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="about "
            android:textSize="14dp"
            android:textColor="#0869BF" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>